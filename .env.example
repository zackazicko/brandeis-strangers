# Environment Variables Template
# Copy this file to .env.local for local development
# For deployment, add these to your hosting platform's environment settings

# ------------------------------------------------------
# SUPABASE CONFIGURATION
# ------------------------------------------------------
# Supabase URL and API keys
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
NEXT_PUBLIC_SUPABASE_SERVICE_KEY=your_supabase_service_key

# ------------------------------------------------------
# SENDGRID CONFIGURATION
# ------------------------------------------------------
# API key for sending email verifications
NEXT_PUBLIC_SENDGRID_API_KEY=your_sendgrid_api_key

# ------------------------------------------------------
# ADMIN CONFIGURATION
# ------------------------------------------------------
# Password for accessing admin features
NEXT_PUBLIC_ADMIN_PASSWORD=your_admin_password 